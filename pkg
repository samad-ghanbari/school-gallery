aos : animate on scroll
npm install aos

src/utils/aos/index.tsx
	'use client';

	import { useEffect } from 'react';
	import AOS from 'aos';
	import 'aos/dist/aos.css';

	export function AOSInit() {
	  useEffect(() => {
	    AOS.init({
	      duration: 1000,
	      offset: 0,
	      once: true,
	    });
	  }, []);
	  return null;
	}


layout.tsx
	import { AOSInit } from '@/src/utils/aos';
	
	<html lang="en" >
        <AOSInit />
	<body>
	...

